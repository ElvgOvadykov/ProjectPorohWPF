<Window x:Class="ProjectPorohWPF.PrintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPorohWPF"
        mc:Ignorable="d"
        Title="Печать" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Выберите принтер" Grid.ColumnSpan="2" Margin="10 0 10 0"></TextBlock>
        <ComboBox x:Name="PrinterComboBox" Grid.Row="1" Margin="10 0 10 0"/>
        <Button x:Name="PrintButton" Grid.Row="2" Content="Печать" Height="30" Width="70" Click="PrintButton_Click"></Button>
    </Grid>
</Window>
